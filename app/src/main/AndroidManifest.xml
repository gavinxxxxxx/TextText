<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.gavin.text">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="me.gavin.base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme.NoActionBar">

        <activity android:name="me.gavin.app.IndexActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="me.gavin.app.read.ReadActivity" />

        <activity android:name="me.gavin.app.explorer.ExplorerActivity">
            <intent-filter>
                <action android:name="android.intent.action.TEST" />
                <category android:name="android.intent.category.TEST" />
            </intent-filter>
        </activity>

        <activity android:name="me.gavin.app.shelf.ShelfActivity">
            <intent-filter>
                <action android:name="android.intent.action.TEST" />
                <category android:name="android.intent.category.TEST" />
            </intent-filter>
        </activity>

    </application>

</manifest>