<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:subtitleTextAppearance="@style/Toolbar.SubtitleOverlay"
            app:theme="@style/ToolbarLightOverflow"
            app:title="@string/app_name"
            app:titleTextAppearance="@style/Toolbar.TitleOverlay"
            tools:navigationIcon="@drawable/ic_arrow_back_24dp"
            tools:titleTextColor="@color/colorTitle" />

    </android.support.design.widget.AppBarLayout>

</layout>

