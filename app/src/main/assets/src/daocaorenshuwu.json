  "directoryFields": [
    {
      "type": "id",
      "select": null,
      "attr": "href",
      "feature": "http://www.daocaorenshuwu.com/\\S+/{chapterId}.html"
    },
    {
      "type": "title",
      "select": null,
      "attr": "title"
    }
  ],
